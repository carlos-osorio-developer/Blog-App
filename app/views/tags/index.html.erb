<div class="container-fluid">
  <h1>Tags</h1>  
  <table class="table table-dark table-hover w-50">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Tag</th> 
        <th scope="col">Tagged articles</th>
      </tr>      
    </thead>
    <tbody>
    <% @tags.each_with_index do |tag, index| %>
      <tr>
        <th scope="row"><%= index %></th>
        <td><%= link_to tag.name, tag_path(tag), class: "badge bg-secondary text-decoration-none" %>        
          <span><%= link_to "Delete", tag_path(tag),
                  class: "badge bg-danger text-decoration-none link-light",
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
          </span>
        </td>
        <td class="text-center"><%= tag.articles.all.count %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>